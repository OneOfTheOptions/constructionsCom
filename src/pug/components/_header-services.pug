mixin header-services
    header.header.header--secondary
        .container.header__container
            a.header__link(href='../index.html')
                +image('logoBlack')
            nav.nav
                ul.nav__list.list-reset
                    li.nav__item
                        a.nav__item-link(href="about-us.html") About Us
                    li.nav__item
                        a.nav__item-link.nav__item-link--current() Services
                    li.nav__item
                        a.nav__item-link(href="our-work.html") Work
                    li.nav__item
                        a.nav__item-link(href="#") News
                    li.nav__item
                        a.nav__item-link(href="#") Contacts
            .header-contacts
                a.header-contacts__link.contacts-link.contacts-link--call(href="tel:4055550128")
                    span.contacts-link__caption Call us
                    span.contacts-link__value (405) 555-0128
                a.header-contacts__link.contacts-link.contacts-link--mail(href="mailto:hello@createx.com")
                    span.contacts-link__caption Talk to us
                    span.contacts-link__value hello@createx.com