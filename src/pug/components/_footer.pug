mixin footer
    footer.footer
        .container.footer__container
            .footer__left
                .footer__top
                    a(href='#').logo.footer__logo
                        +image('logoWhite')
                    ul.footer__socials.socials.list-reset
                        li.socials__item
                            a(href="#" target="_blank" aria-label="whatsapp").socials__link
                                svg(aria-hidden="true").socials__item--icon
                                    use(xlink:href="#whatsapp")
                        li.socials__item
                            a(href="#" target="_blank" aria-label="messenger-rooms").socials__link
                                svg(aria-hidden="true").socials__item--icon
                                    use(xlink:href="#messenger")
                        li.socials__item
                            a(href="#" target="_blank" aria-label="facebook").socials__link
                                svg(aria-hidden="true").socials__item--icon
                                    use(xlink:href="#facebook")
                        li.socials__item
                            a(href="#" target="_blank" aria-label="twitter").socials__link
                                svg(aria-hidden="true").socials__item--icon
                                    use(xlink:href="#twitter")
                        li.socials__item
                            a(href="#" target="_blank" aria-label="youtube").socials__link
                                svg(aria-hidden="true").socials__item--icon
                                    use(xlink:href="#youtube")
                p.footer__descr.
                    Createx Construction Bureau has been successfully operating in the USA construction market since 2000.
                    We are proud to offer you quality construction and exemplary service.
                    Our mission is to set the highest standards for construction sphere.
            form(action="#").footer-form.footer__form
                h3.footer-form__title.
                    Let’s stay in touch
                .footer-form__items
                    label.form-field.footer-form__field
                        input(type = "email" name="email" placeholder="Your email address").form-field__input
                    button.footer-form__btn.btn.btn--fill.
                        subscribe
                p.footer-form__descr.
                    *Subscribe to our newsletter to receive communications and early updates from Createx Construction Bureau.
            address.footer-address.footer__address
                h3.footer-address__title.footer-title.
                    HEAD OFFICE
                span.footer-address__item
                    span.footer-address__name.
                        Address:
                    p.
                        8502 Preston Rd. Inglewood, New York
                span.footer-address__item
                    span.footer-address__name.
                        Call:
                    a(href="tel:4055550128").
                        (405) 555-0128
                span.footer-address__item
                    span.footer-address__name.
                        Email:
                    a(href="mailto:hello@createx.com").
                        hello@createx.com
            nav(title="secondary navigation").footer-nav.footer__nav
                .footer-nav__col
                    h3.footer-nav__title.footer-title.
                        WHO WE ARE
                    ul.list-reset.footer-nav__list
                        li.footer-nav__item
                            a(href="").footer-nav__link.
                                About Us
                        li.footer-nav__item
                            a(href="").footer-nav__link.
                                Available Positions
                        li.footer-nav__item
                            a(href="").footer-nav__link.
                                Contacts
                .footer-nav__col
                    h3.footer-nav__title.footer-title.
                        OUR EXPERIENCE
                    ul.list-reset.footer-nav__list
                        li.footer-nav__item
                            a(href="").footer-nav__link.
                                Services
                        li.footer-nav__item
                            a(href="").footer-nav__link.
                                Work
                        li.footer-nav__item
                            a(href="").footer-nav__link.
                                News
                small.footer-copyright.footer__copyright
                    |© All rights reserved. Made with
                    span.
                        by Createx Studio

