mixin mission
    section.mission.section-offset
        .container
            h2.title.title--center.
                Our core values
            p.descr.descr--center.
                Our mission is to set the highest standards for construction sphere.
            ul.list-reset.mission__list.main-list
                li.main-list__item.main-list__item--quality
                    h4.main-list__subtitle.
                        Quality
                    p.main-list__descr.
                        Culpa nostrud commodo ea consequat aliquip reprehenderit. Veniam velit nostrud aliquip sunt.
                li.main-list__item.main-list__item--safety
                    h4.main-list__subtitle.
                        Safety
                    p.main-list__descr.
                        Anim reprehenderit sint voluptate exercitation adipisicing laborum adipisicing. Minim empor est ea.
                li.main-list__item.main-list__item--comfort
                    h4.main-list__subtitle.
                        Comfort
                    p.main-list__descr.
                        Sit veniam aute dolore adipisicing nulla sit culpa. Minim mollit voluptate ullamco proident ea ad.
            form(action="#").know-form
                h3.subtitle.
                    Want to know more? Ask us a question:
                .know-form__content
                    label.know-form__field.form-field
                        span.form-field__caption Name
                        input(type="text" placeholder="Your name").form-field__input
                    label.know-form__field.form-field
                        span.form-field__caption Phone
                        input(type="tel" placeholder="Your phone").form-field__input
                    label.know-form__field.form-field.form-field--big
                        span.form-field__caption Message
                        input(type="text" placeholder="Your message").form-field__input
                    btn(type ="submit").btn-reset.btn.btn--fill Send